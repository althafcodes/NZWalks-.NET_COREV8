@model AddRegionModel

<h2>Add Region</h2>

<form asp-controller="Regions" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegionImageURL"></label>
        <input asp-for="RegionImageURL" class="form-control" />
        <span asp-validation-for="RegionImageURL" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-controller="Region" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
