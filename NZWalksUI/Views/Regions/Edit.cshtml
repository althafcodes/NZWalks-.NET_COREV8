@model RegionsDTO

<h1 class="mt-3">
    Edit Region
</h1>

@if(Model is not null)
{
    <form asp-controller="Regions" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="ID"></label>
            <input asp-for="ID" class="form-control" readonly />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RegionImageURL"></label>
            <input asp-for="RegionImageURL" class="form-control" />
            <span asp-validation-for="RegionImageURL" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <button asp-controller="Regions" asp-action="Delete" type="submit" class="btn btn-success">Delete</button>
        <a asp-controller="Regions" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
